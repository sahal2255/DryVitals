	<script>
			
function updateProductDetails(productId, selectElement) {
    // Get the selected variant option
    var selectedOption = selectElement.options[selectElement.selectedIndex];

    // Get the selected variant details
    var selectedVariant = selectedOption.value;
    var selectedPrice = selectedOption.getAttribute('data-price');
    var selectedStock = selectedOption.getAttribute('data-stock');

    // Update the input fields with the selected variant details
    document.getElementById('productName').value = '{{product.productName}}';
    document.getElementById('category').value = '{{product.category}}';
    document.getElementById('price').value =   selectedPrice; // Update the price field with the selected price
    document.getElementById('selectedVariant').value = selectedVariant;

    // Update the product details displayed on the page
    var stockElement = document.getElementById('selectedStock');

    stockElement.textContent = 'Available stock: ' + selectedStock;
}



window.onload = function() {
    // Get the select element
    var selectElement = document.getElementById('stockSelect{{_id}}');

    // Get the default selected option
    var defaultOption = selectElement.querySelector('option[selected]')|| selectElement.options[0];

    // Get the default selected variant details
    var defaultVariant = defaultOption.value;
    var defaultPrice = defaultOption.getAttribute('data-price');
    var defaultStock = defaultOption.getAttribute('data-stock');

    // Update the product details displayed on the page
    var priceElement = document.getElementById('selectedPrice');
    var variantElement = document.getElementById('selectedVariant');
    var stockElement = document.getElementById('selectedStock');



    priceElement.textContent =  defaultPrice;
    variantElement.textContent = 'Variant: ' + defaultVariant;
    stockElement.textContent = 'Available stock: ' + defaultStock;
};






