	<script>
// Get the quantity input and quantity buttons
const quantityInput = document.getElementById("quantity");
const quantityDecrementBtn = document.getElementById("quantity-decrement");
const quantityIncrementBtn = document.getElementById("quantity-increment");

// Set the initial minimum value for the quantity input

// Add event listener for decrement button
quantityDecrementBtn.addEventListener("click", function() {
    // Decrement the quantity value
    let currentValue = parseInt(quantityInput.value);
    if (currentValue > quantityInput.min) {
        quantityInput.value = currentValue - 1;
    }
});

// Add event listener for increment button
quantityIncrementBtn.addEventListener("click", function() {
	console.log(quantityIncrementBtn)
    // Increment the quantity value
    let currentValue = parseInt(quantityInput.value);
        quantityInput.value = currentValue + 1;
});
  // Function to update product details
// Function to update product details
function updateProductDetails(productId, selectElement) {
    // Get the selected variant option
    var selectedOption = selectElement.options[selectElement.selectedIndex];

    // Get the selected variant details
    var selectedVariant = selectedOption.value;
    var selectedPrice = selectedOption.getAttribute('data-price');
    var selectedStock = selectedOption.getAttribute('data-stock');

    // Update the product details displayed on the page
    var priceElement = document.getElementById('selectedPrice');
    var variantElement = document.getElementById('selectedVariant');
    var stockElement = document.getElementById('selectedStock');

    priceElement.textContent = '₹' + selectedPrice;
    variantElement.textContent = 'Variant: ' + selectedVariant;
    stockElement.textContent = 'Available stock: ' + selectedStock;
}

// Set default selected variant details when the page loads
window.onload = function() {
    // Get the select element
    var selectElement = document.getElementById('stockSelect{{_id}}');

    // Get the default selected option
    var defaultOption = selectElement.querySelector('option[selected]')|| selectElement.options[0];

    // Get the default selected variant details
    var defaultVariant = defaultOption.value;
    var defaultPrice = defaultOption.getAttribute('data-price');
    var defaultStock = defaultOption.getAttribute('data-stock');

    // Update the product details displayed on the page
    var priceElement = document.getElementById('selectedPrice');
    var variantElement = document.getElementById('selectedVariant');
    var stockElement = document.getElementById('selectedStock');

    priceElement.textContent = '₹' + defaultPrice;
    variantElement.textContent = 'Variant: ' + defaultVariant;
    stockElement.textContent = 'Available stock: ' + defaultStock;
};


function addToCart(productId) {
    axios.post('/cart/add', { productId })
        .then(response => {
            // Handle success, e.g., show a success message
            console.log('Product added to cart:', response.data);
        })
        .catch(error => {
            // Handle error, e.g., show an error message
            console.error('Error adding product to cart:', error);
        });
}



