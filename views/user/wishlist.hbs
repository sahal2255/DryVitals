<script>
	function deletewishlist(productId){
	
    console.log('deleting wishlist', productId);
    axios.delete(`/wishlist/delete-wishlist/${productId}`)
    .then(response => {
        if(response.status === 200 ){
            console.log('remove wishlist success', response);
            location.reload();
        } else {
            console.log('failed remove');
        }
    }).catch(error => {
        console.error('error removing product', error);
    });
}


function wishlistToCart(productId, productName, productImage, variant, mrp, price) {
    console.log('addto wishlist product id', productId);
    // Make a POST request to the cart endpoint with product details in the request body
    axios.post(`/cart/wishlist-cart/${productId}`, {
        productName: productName,
        productImage: productImage,
        variant: variant,
        mrp: mrp,
        price: price
    })
    .then(response => {
        if (response.status === 200) {
            // Show SweetAlert success message
            Swal.fire({
                icon: 'success',
                title: 'Added to Cart!',
                showConfirmButton: false,
                timer: 2000
            }).then(() => {
                // Reload the page after adding to cart
				 deleteFromWishlist(productId);
                location.reload();
            });
        } else {
            // Show SweetAlert error message
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Error adding to cart!'
            });
        }
    })
    .catch(error => {
        // Show SweetAlert error message
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Error adding to cart!'
        });
        console.log('error adding to cart:', error);
    });
}
function deleteFromWishlist(productId) {
    axios.delete(`/wishlist/delete-wishlist/${productId}`)
    .then(response => {
        if(response.status === 200) {
            console.log('Item removed from wishlist');
        } else {
            console.log('Failed to remove item from wishlist');
        }
    })
    .catch(error => {
        console.error('Error removing item from wishlist', error);
    });
}

</script>

