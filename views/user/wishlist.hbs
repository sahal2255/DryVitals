<style>
    .cart-section {
        padding: 30px 0; /* Add padding for better spacing */
    }

    .wishlist-table {
        width: 100%; /* Make the table full width */
        border-collapse: collapse; /* Collapse border-spacing, if any */
    }

    .wishlist-table-head {
        background-color: #f8f9fa; /* Background color for table header */
    }

    .wishlist-table-head th {
        padding: 10px; /* Add padding to header cells */
        text-align: left; /* Align text to the left */
        font-weight: bold; /* Make the header text bold */
        border-bottom: 2px solid #dee2e6; /* Add bottom border */
    }

    .table-body-row {
        border-bottom: 1px solid #dee2e6; /* Add bottom border to table rows */
    }

    .table-body-row:last-child {
        border-bottom: none; /* Remove bottom border from last row */
    }

    .table-body-row td {
        padding: 10px; /* Add padding to table cells */
        vertical-align: middle; /* Align content vertically */
    }

    .product-remove button {
        background: none; /* Remove background color from remove button */
        border: none; /* Remove border from remove button */
        cursor: pointer; /* Change cursor to pointer on hover */
    }

    .product-remove button i {
        color: #dc3545; /* Set color for remove icon */
    }

    .product-image img {
        max-width: 100px; /* Set maximum width for product images */
        height: auto; /* Automatically adjust height */
    }
	.wishlist-to-cart {
    background-color: rgb(188, 102, 22);
    border: none;
    height: 30px;
    width: 150px;
    border-radius: 20px;
    color: white;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.3);
}

.wishlist-to-cart:hover {
    background-color: rgb(158, 82, 12); /* Darker shade for hover effect */
    transform: translateY(-2px); /* Move the button slightly upwards on hover */
}

.wishlist-to-cart img {
