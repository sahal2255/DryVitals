	<script>
	
		function deleteProduct(productId) {
    // Display confirmation dialog using SweetAlert
    Swal.fire({
        title: 'Are you sure?',
        text: 'Once deleted, you will not be able to recover this product!',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, delete it!',
        cancelButtonText: 'No, keep it'
    }).then((result) => {
        // Check if user confirmed the action
        if (result.isConfirmed) {
            // User confirmed, proceed with deletion
            console.log('deleting', productId);
            axios.delete(`/cart/delete-product/${productId}`)
                .then(response => {
                    if (response.status === 200) {
                        console.log('Product deleted successfully');
                        location.reload(); // Reload the page after deletion
                    } else {
                        console.log('Failed to delete product');
                    }
                })
                .catch(error => {
                    console.error('Error deleting product:', error);
                });
        }
    });
}

    

function incrementQuantity(productId) {
    axios.post(`/cart/incrementQuantity/${productId}`)
        .then(async function (response) {
            const { cartItem } = response.data;
            document.getElementById(`quantity_${cartItem.productId}`).innerText = cartItem.quantity;
            document.getElementById(`mrp_${cartItem.productId}`).innerText =`â‚¹${cartItem.productmrp}`;
            document.getElementById(`totalPrice_${cartItem.productId}`).innerText = `â‚¹${cartItem.productPrice}`;
            document.getElementById(`totalmrp`).innerText = `â‚¹${response.data.total}`;
            document.getElementById(`subtotal`).innerText = `â‚¹${response.data.subtotal}`;
        })
        .catch(function (error) {
            console.error('Error incrementing quantity:', error);
        });
}


function decrementQuantity(productId) {
    axios.post(`/cart/decrementQuantity/${productId}`)
        .then(async function (response) {
            const { cartItem } = response.data;
            document.getElementById(`quantity_${cartItem.productId}`).innerText = cartItem.quantity;
            document.getElementById(`mrp_${cartItem.productId}`).innerText = `â‚¹${cartItem.productmrp}`;
            document.getElementById(`totalPrice_${cartItem.productId}`).innerText = `â‚¹${cartItem.productPrice}`;
            document.getElementById(`totalmrp`).innerText = `â‚¹${response.data.total}`;
            document.getElementById(`subtotal`).innerText = `â‚¹${response.data.subtotal}`;
        })
        .catch(function (error) {
            console.error('Error decrementing quantity:', error);
        });
}




